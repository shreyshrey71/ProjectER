            android:screenOrientation="portrait"/>
        <activity android:name=".BinaryInvertDifficult"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClassicNormal"
            android:screenOrientation="portrait"/>
        <activity android:name=".ClassicInvert"
            android:screenOrientation="portrait"/>
        <activity android:name=".RelayNormal"
            android:screenOrientation="portrait"/>
        <activity android:name=".RelayInvert"
            android:screenOrientation="portrait"/>
        <activity android:name=".Result"/>

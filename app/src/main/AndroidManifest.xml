        <activity android:name=".ArcadeInvert"
            android:screenOrientation="portrait"/>
        <activity android:name=".ZenNormal"
            android:screenOrientation="portrait"/>
        <activity android:name=".ZenInvert"
            android:screenOrientation="portrait"/>
        <activity android:name=".BinaryNormalEasy"
            android:screenOrientation="portrait"/>
        <activity android:name=".BinaryNormalDifficult"
            android:screenOrientation="portrait"/>
